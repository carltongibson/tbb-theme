{{!< layout-about}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}



<header class="main-header author-head no-cover">
  <nav class="main-nav clearfix">
      <a class="back-button icon-arrow-left" href="{{@blog.url}}">Home</a>
      <a class="subscribe-button icon-feed" href="{{@blog.url}}/rss/">Subscribe</a>
  </nav>
</header>

<section class="author-profile inner">
    <figure class="author-image">
        <div class="img" style="background-image: url(//www.gravatar.com/avatar/e4220d202936ff81401974cc1b43801b?d=404&amp;s=250)"><span class="hidden">Carlton Gibson's Picture</span></div>
    </figure>
    <h1 class="author-title">Carlton Gibson</h1>
</section>

<br />

<main class="content" role="main">

    <article class="{{post_class}}">
    {{! Everything inside the #post tags pulls data from the post }}
    {{#post}}

        <section class="post-content">
            {{content}}
        </section>

    {{/post}}
    </article>

</main>
